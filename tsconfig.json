{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2016",
      "esnext.asynciterable",
      "dom"
    ],
    "jsx": "react",
    "declaration": false,
    // "sourceMap": true,
    "outDir": "dist",


    "strict": false,


    "moduleResolution": "node",
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,


    // "sourceRoot": "",
    // "mapRoot": "",
    // "inlineSourceMap": true,
    // "inlineSources": true,


    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "node",
      "jest",
      "cypress",
    ]
  },
  "include": [
    "**/*.ts*"
  ],
  "exclude": [
    "node_modules",
    "_old",
  ]
}
